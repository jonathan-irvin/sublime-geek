<?

require_once ('./config.php');
connect2slm();

//Grab the datetime and set post data to variables
$date = date('Y-m-d G:i:s');
$ownerkey = $_POST["ownerkey"];
$machinekey = $_POST["objectkey"];
$mfgid = $_POST["mfgid"];

//Verify that all data was passed properly
if($machinekey == "") {die("No machine key");}
if($ownerkey == "") {die("No owner key");}



//Check for game registration to make sure the game is registered in the system.
$result = mysql_query("SELECT * FROM vgi_games WHERE machine_key='$machinekey' AND owner_key='$ownerkey'");
$num=mysql_numrows($result);	
if($num == 1)
{
	$status=mysql_result($result,0,"status");

mysql_free_result($result);

//set the distribution percentages
if($status == "Deactivated") {print("not activated");}
else if($status == "Activated") {print("activated");}
}
else if($num == 0)
{
	print("not registered");
	die();
}
?>
